<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_curved</item>
    </style>
</resources>